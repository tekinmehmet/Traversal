@model Traversal.Models.UserRegisterViewModel
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords"
          content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta tag Keywords -->
    <!--/Style-CSS -->
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
    <!--//Style-CSS -->
    <style type="text/css">
        .text-danger {
            color: red;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <!-- /login-section -->
    <section class="w3l-login-6">
        <div class="login-hny">
            <div class="form-content">
                <div class="form-right">
                    <div class="overlay">
                        <div class="grid-info-form">
                            <h5>Merhaba</h5>
                            <h3>Yeni Hesap Oluşturma Sayfasındasınız </h3>
                            <p>
                                Seyahat edip bilgi birikiminizi artırmak ve yeni kültürler keşfetmek için sitemize üye olma aşamasındasınız.
                                Sizlere kaliteli bir hizmet ve mutlu müşteri memnuniyeti sunacağımız güzel seyahatlerimizde birlikte olmak dileğiyle
                            </p>
                            <a href="/Login/SignIn/" class="read-more-1 btn">Hesabım Var,Hadi Başlayalım</a>
                        </div>
                    </div>
                </div>
                <div class="form-left">

                    <form action="#" method="post" class="signin-form">
                        <div class="form-input">
                            <label>Adınız</label>
                            <input type="text" required asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Soyadınız</label>
                            <input type="text" required asp-for="SurName" />
                            <span asp-validation-for="SurName" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Kullanıcı Adınız</label>
                            <input type="text" required asp-for="UserName" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Mail</label>
                            <input type="email" required asp-for="Mail" />
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Şifre</label>
                            <input type="password" required asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Şifre Tekrar</label>
                            <input type="password" required asp-for="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly">

                        </div>
                        <label class="container">
                            Kabul ediyorum. <a href="#">Gizlilik Şartlarını Okudum</a>
                            <input type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                        <button class="btn">Hesap Oluştur</button>
                    </form>
                    <div class="copy-right text-center">
                        <p>
                            © @DateTime.Now.Year Tüm hakları saklıdır. | Design by
                            MTCompanyGroup
                        </p>
                    </div>
                </div>

            </div>

        </div>
    </section>
    <!-- //login-section -->

</body>

</html>